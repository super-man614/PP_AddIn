<?xml version="1.0" encoding="UTF-8"?>
<customUI xmlns="http://schemas.microsoft.com/office/2009/07/customui" onLoad="Ribbon_Load">
    <ribbon>
        <tabs>
            <tab id="PowerPointToolsTab" label="PowerPoint Add-in Tools">
                <!-- File Group -->
                <group id="FileGroup" label="File">
                        <button id="File_New"
                                size="normal"
                                onAction="New_Click"
                                imageMso="FileNew"
                                screentip="New File"/>
                        <button id="File_Open"
                                size="normal"
                                onAction="Open_Click"
                                imageMso="FileOpen"
                                screentip="Open File"/>
                        <button id="File_Save"
                                onAction="Save_Click"
                                imageMso="FileSave"
                                screentip="Save File"/>
                        <button id="File_Email"
                                onAction="Email_Click"
                                imageMso="FileNewEmail"
                                screentip="File New Email"/>
                        <button id="File_Print"
                                onAction="Print_Click"
                                imageMso="FilePrint"
                                screentip="Print Priview (Ctrl+P)"/>
                        <button id="File_SaveAs"
                                onAction="SaveAs_Click"
                                imageMso="FileSaveAs"
                                screentip="Save as"/>
                </group>

                <!-- Express Group -->
                <group id="ExpressGroup" label="Express">
                        <toggleButton id="Express_Ruler" 
                                label="Ruler" 
                                size="normal" 
                                imageMso="ViewRulerPowerPoint" 
                                getPressed="GetEnableFeatureState" 
                                screentip="Toggle Ruler" 
                                supertip="Show or hide the ruler in the presentation"/>
                        <toggleButton id="Express_Guide" 
                                label="Guides" 
                                size="normal" 
                                imageMso="PhoneticGuideFieldShow" 
                                getPressed="GetEnableFeatureState" 
                                screentip="Toggle Guides" 
                                supertip="Show or hide guides in the presentation"/>
                        <toggleButton id="Express_GridLines" 
                                label="Gridlines" 
                                size="normal" 
                                imageMso="ViewGridlinesFrontPage" 
                                getPressed="GetEnableFeatureState" 
                                screentip="Toggle Gridlines" 
                                supertip="Show or hide gridlines in the presentation"/>
                        <toggleButton id="Express_SlideMaster" 
                                label="Slide Master" 
                                size="normal" 
                                imageMso="SlideMasterMasterLayout" 
                                getPressed="GetEnableFeatureState" 
                                screentip="Slide Master" 
                                supertip="Open the slide master view"/>
                        <toggleButton id="Express_SlideList" 
                                label="Slide List" 
                                size="normal" 
                                imageMso="ViewSlideSorterView" 
                                getPressed="GetEnableFeatureState" 
                                screentip="Slide List" 
                                supertip="View all slides in sorter view"/>
                        <toggleButton id="Express_Standard" 
                                label="Standard Layout" 
                                size="normal" 
                                imageMso="SlideLayoutGallery" 
                                getPressed="GetEnableFeatureState" 
                                screentip="Standard Layout" 
                                supertip="Apply the standard slide layout"/>
                </group>
                <!-- Element Group -->
                <group id="ElementGroup" label="Element">
                        <button id="Element_ObjectTemplate" 
                                label="Object Template" 
                                size="large" 
                                imageMso="ObjectsGroupMenuOutlook" 
                                screentip="Object Template"/>
                        <button id="Element_SlideTemplate" 
                                label="Slide Template" 
                                size="large" 
                                imageMso="GroupSlides" 
                                screentip="Slide Template"/>
                        <button id="Element_ColorPalette" 
                                label="Color Palette" 
                                size="large" 
                                imageMso="ThemeColorsGallery" 
                                screentip="Color Palette"/>
                        <button id="Element_Matrix" 
                                label="Matrix" 
                                size="large" 
                                onAction="Matrix_Click"
                                imageMso="ViewNormalViewExcel" 
                                screentip="Matrix"/>
                        <button id="Element_Excel" 
                                label="" 
                                size="normal" 
                                imageMso="FileSaveAsExcelXlsb" 
                                screentip="Excel"/>
                        <button id="Element_Word" 
                                label="" 
                                size="normal" 
                                imageMso="FileSaveAsWordDocx" 
                                screentip="Word"/>
                        <button id="Element_PowerPoint" 
                                label="" 
                                size="normal" 
                                imageMso="FileSaveAsPowerPointPptx" 
                                screentip="PowerPoint"/>
                        <splitButton id="PresetGroup">
                                <button id="Preset1Apply"
                                        label="Preset 1"
                                        imageMso=""
                                        onAction="Preset1_Apply"
                                        screentip="Apply Preset 1"
                                        supertip="Apply Preset 1 to the presentation" />
                                <menu id="Preset1Menu">
                                <button id="Preset1Save"
                                        label="Save from Selection"
                                        imageMso="Save"
                                        onAction="Preset1_Save"
                                        screentip="Save Preset 1"
                                        supertip="Save current selection as Preset 1" />
                                <button id="Preset1Clear"
                                        label="Clear"
                                        imageMso="Cancel"
                                        onAction="Preset1_Clear"
                                        screentip="Clear Preset 1"
                                        supertip="Clear Preset 1 settings" />
                                </menu>
                        </splitButton>
                        <splitButton id="Preset2Split">
                                <button id="Preset2Apply"
                                        label="Preset 2"
                                        imageMso=""
                                        onAction="Preset2_Apply"
                                        screentip="Apply Preset 2"
                                        supertip="Apply Preset 2 to the presentation" />
                                <menu id="Preset2Menu">
                                        <button id="Preset2Save"
                                                label="Save from Selection"
                                                imageMso="Save"
                                                onAction="Preset2_Save"
                                                screentip="Save Preset 2"
                                                supertip="Save current selection as Preset 2" />
                                        <button id="Preset2Clear"
                                                label="Clear"
                                                imageMso="Cancel"
                                                onAction="Preset2_Clear"
                                                screentip="Clear Preset 2"
                                                supertip="Clear Preset 2 settings" />
                                </menu>
                        </splitButton>
                        <splitButton id="Preset3Split">
                                <button id="Preset3Apply"
                                        label="Preset 3"
                                        imageMso=""
                                        onAction="Preset3_Apply"
                                        screentip="Apply Preset 3"
                                        supertip="Apply Preset 3 to the presentation" />
                                <menu id="Preset3Menu">
                                <button id="Preset3Save"
                                        label="Save from Selection"
                                        imageMso="Save"
                                        onAction="Preset3_Save"
                                        screentip="Save Preset 3"
                                        supertip="Save current selection as Preset 3" />
                                <button id="Preset3Clear"
                                        label="Clear"
                                        imageMso="Cancel"
                                        onAction="Preset3_Clear"
                                        screentip="Clear Preset 3"
                                        supertip="Clear Preset 3 settings" />
                                </menu>
                        </splitButton>
                </group>

                <!-- Insert Group -->
                <group id="InsertGroup" label="Insert">
                        <button id="Insert_Shape"
                                label=""
                                size="normal"
                                imageMso="ShapesMoreShapes"
                                screentip="Shape"/>
                        <button id="Insert_Chart"
                                label=""
                                size="normal"
                                imageMso="ChartInsert"
                                screentip="Chart"/>
                        <button id="Insert_Note"
                                label=""
                                size="normal"
                                imageMso="NewNote"
                                screentip="Note"/>
                        <button id="Insert_Note"
                                label=""
                                size="normal"
                                imageMso="NewNote"
                                screentip="Note"/>
                        <button id="Insert_Rectangle"
                                label=""
                                size="normal"
                                imageMso="ShapeRectangle"
                                screentip="Rectangle"/>
                        <button id="Insert_Oval"
                                label=""
                                size="normal"
                                imageMso="ShapeOval"
                                screentip="Oval"/>
                </group>
                <group id="AlignGroup" label="Align">
                        <button id="Align_Left"
                                label=""
                                size="normal"
                                imageMso="ObjectsAlignLeft"
                                screentip="Left"/>
                        <button id="Align_Top"
                                label=""
                                size="normal"
                                imageMso="ObjectsAlignTop"
                                screentip="Top"/>
                        <button id="Align_DistributeHorizon"
                                label=""
                                size="normal"
                                imageMso="AlignDistributeHorizontally"
                                screentip="Right"/>
                        <button id="Align_CenterHorizon"
                                label=""
                                size="normal"
                                imageMso="ObjectsAlignCenterHorizontalSmart"
                                screentip="Top"/>
                </group>
            </tab>
            <tab id="PowerPointToolsTab1" label="PowerPoint Tools">
                <group id="FallbackGroup" label="Fallback">
                        <button id="TestRibbonButtonFallback"
                                label="Test Ribbon"
                                size="large"
                                onAction="TestRibbon_Click"
                                imageMso="HappyFace"
                                screentip="Fallback Ribbon"
                                supertip="Fallback ribbon loaded" />
                </group>
            </tab>
        </tabs>
    </ribbon>
</customUI>
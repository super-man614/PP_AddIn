<?xml version="1.0" encoding="UTF-8"?>
<customUI xmlns="http://schemas.microsoft.com/office/2009/07/customui" onLoad="Ribbon_Load">
    <ribbon>
        <tabs>
            <tab id="PowerPointToolsTab" label="PowerPoint Add-in Tools">
                <!-- File Group -->
                <group id="FileGroup" label="File">
                        <button id="File_New"
                                size="normal"
                                onAction="New_Click"
                                imageMso="FileNew"
                                screentip="New File"/>
                        <button id="File_Open"
                                size="normal"
                                onAction="Open_Click"
                                imageMso="FileOpen"
                                screentip="Open File"/>
                        <button id="File_Save"
                                onAction="Save_Click"
                                imageMso="FileSave"
                                screentip="Save File"/>
                        <button id="File_Email"
                                onAction="Email_Click"
                                imageMso="FileNewEmail"
                                screentip="File New Email"/>
                        <button id="File_Print"
                                onAction="Print_Click"
                                imageMso="FilePrint"
                                screentip="Print Priview (Ctrl+P)"/>
                        <button id="File_SaveAs"
                                onAction="SaveAs_Click"
                                imageMso="FileSaveAs"
                                screentip="Save as"/>
                </group>

                <!-- Express Group -->
                <group id="ExpressGroup" label="Express">
                        <toggleButton id="Express_Ruler"
                                label="ruler"
                                size="normal"
                                imageMso="ViewRulerPowerPoint"
                                getPressed="GetEnableFeatureState"
                                screentip="Ruler"/>
                        <toggleButton id="Express_Guide"
                                label="guide"
                                size="normal"
                                imageMso=""
                                screentip="Guide"/>
                        <splitButton id="Express_GridLines"
                                label="grid lines"
                                size="normal"
                                imageMso="FileSave"
                                screentip="Save Presentation"
                                supertip="Save the current presentation" />
                        <button id="SaveAsButton"
                                label="Save As"
                                size="normal"
                                onAction="SaveAs_Click"
                                imageMso="FileSaveAs"
                                screentip="Save As"
                                supertip="Save the presentation with a new name" />
                        <button id="PrintButton"
                                label="Print"
                                size="normal"
                                onAction="Print_Click"
                                imageMso="FilePrint"
                                screentip="Print Presentation"
                                supertip="Print the presentation" />
                        <button id="ShareButton"
                                label="Share"
                                size="normal"
                                onAction="Share_Click"
                                imageMso="ShareWorkspace"
                                screentip="Share Presentation"
                                supertip="Share the presentation" />
                </group>

                <!-- Presets Group -->
                <group id="PresetsGroup" label="Presets">
                    <splitButton id="Preset1Split">
                        <button id="Preset1Apply"
                                label="Preset 1"
                                imageMso="StyleGallery"
                                onAction="Preset1_Apply"
                                screentip="Apply Preset 1"
                                supertip="Apply Preset 1 to the presentation" />
                        <menu id="Preset1Menu">
                            <button id="Preset1Save"
                                    label="Save from Selection"
                                    imageMso="Save"
                                    onAction="Preset1_Save"
                                    screentip="Save Preset 1"
                                    supertip="Save current selection as Preset 1" />
                            <button id="Preset1Clear"
                                    label="Clear"
                                    imageMso="Cancel"
                                    onAction="Preset1_Clear"
                                    screentip="Clear Preset 1"
                                    supertip="Clear Preset 1 settings" />
                        </menu>
                    </splitButton>
                    <splitButton id="Preset2Split">
                        <button id="Preset2Apply"
                                label="Preset 2"
                                imageMso="StyleGallery"
                                onAction="Preset2_Apply"
                                screentip="Apply Preset 2"
                                supertip="Apply Preset 2 to the presentation" />
                        <menu id="Preset2Menu">
                            <button id="Preset2Save"
                                    label="Save from Selection"
                                    imageMso="Save"
                                    onAction="Preset2_Save"
                                    screentip="Save Preset 2"
                                    supertip="Save current selection as Preset 2" />
                            <button id="Preset2Clear"
                                    label="Clear"
                                    imageMso="Cancel"
                                    onAction="Preset2_Clear"
                                    screentip="Clear Preset 2"
                                    supertip="Clear Preset 2 settings" />
                        </menu>
                    </splitButton>
                    <splitButton id="Preset3Split">
                        <button id="Preset3Apply"
                                label="Preset 3"
                                imageMso="StyleGallery"
                                onAction="Preset3_Apply"
                                screentip="Apply Preset 3"
                                supertip="Apply Preset 3 to the presentation" />
                        <menu id="Preset3Menu">
                            <button id="Preset3Save"
                                    label="Save from Selection"
                                    imageMso="Save"
                                    onAction="Preset3_Save"
                                    screentip="Save Preset 3"
                                    supertip="Save current selection as Preset 3" />
                            <button id="Preset3Clear"
                                    label="Clear"
                                    imageMso="Cancel"
                                    onAction="Preset3_Clear"
                                    screentip="Clear Preset 3"
                                    supertip="Clear Preset 3 settings" />
                        </menu>
                    </splitButton>
                </group>
            </tab>
            <tab id="PowerPointToolsTab1" label="PowerPoint Tools">
                <group id="FallbackGroup" label="Fallback">
                    <button id="TestRibbonButtonFallback"
                            label="Test Ribbon"
                            size="large"
                            onAction="TestRibbon_Click"
                            imageMso="HappyFace"
                            screentip="Fallback Ribbon"
                            supertip="Fallback ribbon loaded" />
                </group>
            </tab>
        </tabs>
    </ribbon>
</customUI>
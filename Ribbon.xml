<?xml version="1.0" encoding="UTF-8"?>
<customUI xmlns="http://schemas.microsoft.com/office/2009/07/customui" onLoad="Ribbon_Load">
    <ribbon>
        <tabs>
            <tab id="PowerPointToolsTab" label="PowerPoint Add-in Tools">
                <!-- File Group -->
                <group id="FileGroup" label="File">
                        <button id="File_New"
                                size="normal"
                                onAction="New_Click"
                                imageMso="FileNew"
                                screentip="New File"/>
                        <button id="File_Open"
                                size="normal"
                                onAction="Open_Click"
                                imageMso="FileOpen"
                                screentip="Open File"/>
                        <button id="File_Save"
                                onAction="Save_Click"
                                imageMso="FileSave"
                                screentip="Save File"/>
                        <button id="File_Email"
                                onAction="Email_Click"
                                imageMso="FileNewEmail"
                                screentip="File New Email"/>
                        <button id="File_Print"
                                onAction="Print_Click"
                                imageMso="FilePrint"
                                screentip="Print Priview (Ctrl+P)"/>
                        <button id="File_SaveAs"
                                onAction="SaveAs_Click"
                                imageMso="FileSaveAs"
                                screentip="Save as"/>
                </group>

                <!-- Express Group -->
                <group id="ExpressGroup" label="Express">
                        <toggleButton id="Express_Ruler" 
                                label="Ruler" 
                                size="normal" 
                                imageMso="ViewRulerPowerPoint" 
                                getPressed="GetEnableFeatureState" 
                                screentip="Toggle Ruler" 
                                supertip="Show or hide the ruler in the presentation"/>
                        <toggleButton id="Express_Guide" 
                                label="Guides" 
                                size="normal" 
                                imageMso="PhoneticGuideFieldShow" 
                                getPressed="GetEnableFeatureState" 
                                screentip="Toggle Guides" 
                                supertip="Show or hide guides in the presentation"/>
                        <toggleButton id="Express_GridLines" 
                                label="Gridlines" 
                                size="normal" 
                                imageMso="ViewGridlinesFrontPage" 
                                getPressed="GetEnableFeatureState" 
                                screentip="Toggle Gridlines" 
                                supertip="Show or hide gridlines in the presentation"/>
                        <toggleButton id="Express_SlideMaster" 
                                label="Slide Master" 
                                size="normal" 
                                imageMso="SlideMasterMasterLayout" 
                                getPressed="GetEnableFeatureState" 
                                screentip="Slide Master" 
                                supertip="Open the slide master view"/>
                        <toggleButton id="Express_SlideList" 
                                label="Slide List" 
                                size="normal" 
                                imageMso="ViewSlideSorterView" 
                                getPressed="GetEnableFeatureState" 
                                screentip="Slide List" 
                                supertip="View all slides in sorter view"/>
                        <toggleButton id="Express_Standard" 
                                label="Standard Layout" 
                                size="normal" 
                                imageMso="SlideLayoutGallery" 
                                getPressed="GetEnableFeatureState" 
                                screentip="Standard Layout" 
                                supertip="Apply the standard slide layout"/>
                </group>
                <!-- Element Group -->
                <group id="ElementGroup" label="Element">
                        <button id="Element_ObjectTemplate" 
                                label="Object Template" 
                                size="large" 
                                imageMso="DiagramVennDiagramInsertClassic" 
                                onAction="ObjectTemplate_Click"
                                screentip="Object Template"/>
                        <button id="Element_SlideTemplate" 
                                label="Slide Template" 
                                size="large" 
                                imageMso="GroupSlides" 
                                onAction="SlideTemplate_Click"
                                screentip="Slide Template"/>
                                <button id="Element_ColorPalette" 
                                        label="Color Palette" 
                                        size="large"
                                        imageMso="ThemeColorsGallery" 
                                        onAction="ColorPaletteToggle_Click"
                                        screentip="Color Palette"/>
                        <button id="Element_Matrix" 
                                label="Matrix"
                                onAction="Matrix_Click"
                                size="large" 
                                imageMso="TableInsert" 
                                screentip="Matrix"/>
                        <button id="Element_Excel" 
                                size="normal" 
                                onAction="ExcelPaste_Click"
                                imageMso="FileSaveAsExcelXlsb" 
                                screentip="Excel"/>
                        <button id="Element_Word" 
                                size="normal" 
                                imageMso="FileSaveAsWordDocx" 
                                screentip="Word"/>
                        <button id="Element_PowerPoint" 
                                size="normal" 
                                imageMso="FileSaveAsPowerPointPptx" 
                                screentip="PowerPoint"/>
                        <splitButton id="Preset1Split">
                                <button id="Preset1Apply"
                                                label="Preset 1"
                                                onAction="Preset1_Apply"
                                                screentip="Apply Preset 1"
                                                supertip="Apply Preset 1 to the presentation" />
                                <menu id="Preset1Menu">
                                                <button id="Preset1Save"
                                                                label="Save from Selection"
                                                                imageMso="Save"
                                                                onAction="Preset1_Save"
                                                                screentip="Save Preset 1"
                                                                supertip="Save current selection as Preset 1" />
                                                <button id="Preset1Clear"
                                                                label="Clear"
                                                                imageMso="Cancel"
                                                                onAction="Preset1_Clear"
                                                                screentip="Clear Preset 1"
                                                                supertip="Clear Preset 1 settings" />
                                </menu>
                        </splitButton>

                        <splitButton id="Preset2Split">
                                <button id="Preset2Apply"
                                                label="Preset 2"
                                                onAction="Preset2_Apply"
                                                screentip="Apply Preset 2"
                                                supertip="Apply Preset 2 to the presentation" />
                                <menu id="Preset2Menu">
                                                <button id="Preset2Save"
                                                                label="Save from Selection"
                                                                imageMso="Save"
                                                                onAction="Preset2_Save"
                                                                screentip="Save Preset 2"
                                                                supertip="Save current selection as Preset 2" />
                                                <button id="Preset2Clear"
                                                                label="Clear"
                                                                imageMso="Cancel"
                                                                onAction="Preset2_Clear"
                                                                screentip="Clear Preset 2"
                                                                supertip="Clear Preset 2 settings" />
                                </menu>
                        </splitButton>

                        <splitButton id="Preset3Split">
                                <button id="Preset3Apply"
                                                label="Preset 3"
                                                onAction="Preset3_Apply"
                                                screentip="Apply Preset 3"
                                                supertip="Apply Preset 3 to the presentation" />
                                <menu id="Preset3Menu">
                                        <button id="Preset3Save"
                                                        label="Save from Selection"
                                                        imageMso="Save"
                                                        onAction="Preset3_Save"
                                                        screentip="Save Preset 3"
                                                        supertip="Save current selection as Preset 3" />
                                        <button id="Preset3Clear"
                                                        label="Clear"
                                                        imageMso="Cancel"
                                                        onAction="Preset3_Clear"
                                                        screentip="Clear Preset 3"
                                                        supertip="Clear Preset 3 settings" />
                                </menu>
                        </splitButton>
                </group>
                <!-- Insert Group -->
                <group id="InsertGroup" label="Insert">
                        <button id="Insert_Shape"
                                size="normal"
                                imageMso="ShapesMoreShapes"
                                screentip="Shape"/>
                        <button id="Insert_Chart"
                                size="normal"
                                imageMso="ChartInsert"
                                screentip="Chart"/>
                        <button id="Insert_Note"
                                size="normal"
                                imageMso="NewNote"
                                screentip="Note"/>
                        <button id="Insert_Citation"
                                size="normal"
                                imageMso="CitationInsert"
                                screentip="Citation"/>
                        <button id="Insert_Rectangle"
                                size="normal"
                                imageMso="ShapeRectangle"
                                screentip="Rectangle"/>
                        <button id="Insert_Oval"
                                size="normal"
                                imageMso="ShapeOval"
                                screentip="Oval"/>
                </group>
                <!-- Align Group -->
                <group id="AlignGroup" label="Align">
                        <button id="Align_Left"
                                size="normal"
                                imageMso="ObjectsAlignLeft"
                                onAction="AlignLeft_Click"
                                screentip="Left"/>
                        <button id="Align_Top"
                                size="normal"
                                imageMso="ObjectsAlignTop"
                                onAction="AlignTop_Click"
                                screentip="Top"/>
                        <button id="Align_DistributeHorizon"
                                size="normal"
                                imageMso="AlignDistributeHorizontally"
                                onAction="AlignMiddle_Click"
                                screentip="Distribute Horizontally"/>
                        <button id="Align_CenterHorizon"
                                size="normal"
                                imageMso="ObjectsAlignCenterHorizontalSmart"
                                onAction="AlignCenter_Click"
                                screentip="Center Horizontally"/>
                        <button id="Align_CenterVertical"
                                size="normal"
                                imageMso="ObjectsAlignMiddleVerticalSmart"
                                onAction="AlignMiddle_Click"
                                screentip="Center Vertically"/>
                        <button id="Align_DistributeVertical"
                                size="normal"
                                imageMso="AlignDistributeVerticallyClassic"
                                onAction="AlignCenter_Click"
                                screentip="Distribute Vertically"/>
                        <button id="Align_Right"
                                size="normal"
                                imageMso="ObjectsAlignRight"
                                onAction="AlignRight_Click"
                                screentip="Right"/>
                        <button id="Align_Bottom"
                                size="normal"
                                imageMso="ObjectsAlignBottom"
                                onAction="AlignBottom_Click"
                                screentip="Bottom"/>
                        <button id="Align_Grid"
                                size="normal"
                                imageMso="GridShowHide"
                                screentip="Grid Setting"/>
                        <button id="Align_RotateLeft90"
                                size="normal"
                                imageMso="ObjectRotateLeft90"
                                onAction="RotateLeft_Click"
                                screentip="Rotate Left 90"/>
                        <button id="Align_ObjectFlipHorizontal"
                                size="normal"
                                imageMso="ObjectFlipHorizontal"
                                onAction="FlipHorizontal_Click"
                                screentip="Flip Horizontal"/>
                        <button id="Align_FitWidth"
                                size="normal"
                                imageMso="ColumnWidth"
                                screentip="Fit Width"/>
                        <button id="Align_RotateRight90"
                                size="normal"
                                imageMso="ObjectRotateRight90"
                                onAction="RotateRight_Click"
                                screentip="Rotate Right 90"/>
                        <button id="Align_ObjectFlipVertical"
                                size="normal"
                                imageMso="ObjectFlipVertical"
                                onAction="FlipVertical_Click"
                                screentip="Flip Vertical"/>
                        <button id="Align_FitHeight"
                                size="normal"
                                imageMso="RowHeight"
                                screentip="Fit Height"/>
                        <button id="Align_Bring2Back"
                                size="normal"
                                imageMso="ObjectSendBackwardOutlook"
                                onAction="SendToBack_Click"
                                screentip="Send to Back"/>
                        <button id="Align_Send2Front"
                                size="normal"
                                imageMso="ObjectBringForwardOutlook"
                                onAction="BringToFront_Click"
                                screentip="Bring to Front"/>
                        <button id="Align_ObjectsGroup"
                                size="normal"
                                imageMso="ObjectsGroup"
                                onAction="Group_Click"
                                screentip="Group Objects"
                                supertip="Group selected objects together"/>
                        <button id="Align_SendBackward"
                                size="normal"
                                imageMso="ObjectSendBackward"
                                onAction="SendBackward_Click"
                                screentip="Send Backward One Step"
                                supertip="Move selected objects one layer backward"/>
                        <button id="Align_BringForward"
                                size="normal"
                                imageMso="ObjectBringForward"
                                onAction="BringForward_Click"
                                screentip="Bring Forward One Step"
                                supertip="Move selected objects one layer forward"/>
                        
                        <button id="Align_ObjectsUngroup"
                                size="normal"
                                imageMso="ObjectsUngroup"
                                onAction="Ungroup_Click"
                                screentip="Ungroup Objects"
                                supertip="Ungroup selected grouped objects"/>
                        <button id="Align_RemoveArrows"
                                size="normal"
                                imageMso="TraceRemoveAllArrows"
                                screentip="Remove Arrows"/>
                        <button id="Align_SwapPosition"
                                size="normal"
                                imageMso="ReviewAcceptChange"
                                onAction="SwapPosition_Click"
                                screentip="Swap Position"/>
                        <button id="Align_RemoveMarginObjects"
                                size="normal"
                                imageMso="AdpOutputOperationsTableRemove"
                                onAction="RemoveMarginObjects_Click"
                                screentip="Remove Margin"/>
                </group>
                <!-- Format Group -->
                <group id="FormatGroup" label="Format">
                        <splitButton id="Format_ResizeSplit">
                                <button id="Format_Resize" 
                                        imageMso="DrawingCanvasResize" 
                                        onAction="Format_Resize_Click"
                                        screentip="Resize"/>
                                <menu id="Format_ResizeMenu">
                                        <button id="FitWidth" 
                                                label="Width" 
                                                imageMso="PageScaleToFitWidth" onAction="Format_ResizeWidth_Click"/>
                                        <button id="FitHeight" 
                                                label="Height" 
                                                imageMso="PageScaleToFitHeight" 
                                                onAction="Format_ResizeHeight_Click"/>
                                        <button id="FitSize" 
                                                label="Size" 
                                                imageMso="DrawingCanvasResize" onAction="Format_ResizeSize_Click"/>
                                </menu>
                        </splitButton>
                        <splitButton id="Format_MatchColorsSplit">
                                <button id="Format_MatchColors"
                                        imageMso="ObjectFillMoreColorsDialog"
                                        onAction="Format_MatchColors_Click"
                                        screentip="Match Colors"/>
                                <menu id="Format_MatchColorsMenu">
                                        <button id="MatchFill" 
                                                label="Fill" 
                                                imageMso="ShapeFillColorPickerClassic" 
                                                onAction="Format_MatchFill_Click"/>
                                        <button id="MatchFont" 
                                                label="Font" 
                                                imageMso="FontColorPicker" 
                                                onAction="Format_MatchFont_Click"/>
                                        <button id="MatchOutline" 
                                                label="Outline" 
                                                imageMso="OutlineColorPicker" onAction="Format_MatchOutline_Click"/>
                                </menu>
                        </splitButton>
                        <splitButton id="Format_AlignFontsSplit">
                                <button id="Format_AlignFonts" 
                                        imageMso="FontDialog" 
                                        onAction="Format_AlignFonts_Click"
                                        screentip="Match Fonts"/>
                                <menu id="Format_AlignFontsMenu">
                                        <button id="MatchFontSize" 
                                                label="Size" 
                                                imageMso="ThemeFontsGallery" 
                                                onAction="Format_MatchFontSize_Click"/>
                                        <button id="MatchFontFamily" 
                                                label="Family" 
                                                imageMso="LabelFontDialog" 
                                                onAction="Format_MatchFontFamily_Click"/>
                                        <button id="MatchFontColor" 
                                                label="Color" 
                                                imageMso="ViewBackToColorView" 
                                                onAction="Format_MatchFontColor_Click"/>
                                </menu>
                        </splitButton>
                </group>
            </tab>
            <tab id="PowerPointToolsTab1" label="PowerPoint Tools">
                <group id="FallbackGroup" label="Fallback">
                        <button id="TestRibbonButtonFallback"
                                label="Test Ribbon"
                                size="large"
                                onAction="TestRibbon_Click"
                                imageMso="HappyFace"
                                screentip="Fallback Ribbon"
                                supertip="Fallback ribbon loaded" />
                </group>
            </tab>
        </tabs>
    </ribbon>
</customUI>